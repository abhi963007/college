import matplotlib.pyplot as plt

# Data
years = [2010, 2011, 2012, 2013, 2014, 2015, 2016]
car_values = [50000, 48000, 45000, 40700, 37500, 33500, 28000]

# Plotting the data
plt.plot(years, car_values, linestyle='--', color='red', marker='o', linewidth=4, markersize=10, markerfacecolor='green')

# Adding title and labels
plt.title("Value Depreciation")
plt.xlabel("Year")
plt.ylabel("Car Value ($)")

# Display the plot
plt.grid(True)
plt.show()
